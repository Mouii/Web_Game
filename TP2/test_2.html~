<html>
	<head>
	<link rel="stylesheet" type="text/css" href="./style.css">

	</head>
	<body>
	<div id="carre"></div>
	</body>
		<script>
		function pausecomp(millis) {
			var date = new Date();
			var curdate = null;
			do {
				curDate = new Date();
			} while(curDate-date < millis);
		}

		var DATE = new Date();
		var curDATE;
		function moveElem(carre) {
			var elem = document.getElementById(carre);
			var right = 0;
			var time = DATE;
			var timer = setInterval(function() {
				curDATE = new Date();
				elem.style.right = (right +=10) + "px";
				if ( right > 800 ) {
					clearInterval(timer);
				}
				time = DATE - curDATE();
			}, time);
		}

		moveElem("carre");
		</script>
</html>
